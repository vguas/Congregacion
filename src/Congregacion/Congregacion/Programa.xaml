        <TextBox x:Name="txtAspecto" HorizontalAlignment="Left" Height="23" Margin="137,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="289" TextChanged="txtAspecto_TextChanged"/>
        <ListBox x:Name="lblSugerencias" HorizontalAlignment="Left" Height="53" Margin="78,152,0,0" VerticalAlignment="Top" Width="226" SelectionChanged="lblSugerencias_SelectionChanged"/>


